generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int    @id @default(autoincrement())
  name         String
  password     String
  partnerId    Int?   @unique
  points       Int?   @default(0)
  activeGameId Int?
  activeGame   Game?  @relation("GamePlayers", fields: [activeGameId], references: [gameId])
  moves        Move[] @relation("PlayerMoves")
}

model Game {
  gameId    Int       @id @default(autoincrement())
  startTime DateTime?
  endTime   DateTime?
  roundNo   Int?
  status    String?
  moves     Move[]    @relation("GameMoves")
  players   User[]    @relation("GamePlayers")
}

model Move {
  moveId    Int       @id @default(autoincrement())
  gameId    Int
  playerId  Int
  move      String
  roundNo   Int
  timestamp DateTime? @default(now())

  game   Game @relation("GameMoves", fields: [gameId], references: [gameId])
  player User @relation("PlayerMoves", fields: [playerId], references: [id])
}

enum GameStatus {
  ACTIVE
  COMPLETED
}
